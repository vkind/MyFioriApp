<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m">
	<Table headerText="Supplier Information" items="{/supplier}">
		<headerToolbar>
			<Toolbar>
				<ToolbarSpacer></ToolbarSpacer>
				<Button icon="sap-icon://filter" tooltip="maza aavigiyo" press="onFilter"></Button>
			</Toolbar>
		</headerToolbar>
		<columns>
			<Column>
				<Text text="Name"></Text>
			</Column>
			<Column minScreenWidth="Tablet">
				<Text text="Location"></Text>
			</Column>
			<Column>
				<Text text="City"></Text>
			</Column>
			<Column minScreenWidth="Tablet" demandPopin="true">
				<Text text="Since When"></Text>
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<Text  text="{name}"></Text>
					<Input value="{location}"></Input>
					<Input value="{city}" showValueHelp="true" valueHelpRequest="onF4Help"></Input>
					<Text  text="{sinceWhen}"></Text>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
</core:FragmentDefinition>