<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m"
					     xmlns:f="sap.ui.layout.form">
	<f:SimpleForm visible="{mario>/mario}" id="simpleForm">
		<f:toolbar>
			<ToolbarSpacer />
			<Button text="Edit Now" type="Reject" press="onEdit"></Button>
		</f:toolbar>
		<f:content>
			<Label text="Supplier Id"></Label>
			<Text text="{BP_ID}"></Text>
			<Label text="Name"></Label>
			<Text text="{COMPANY_NAME}"></Text>
			<Label text="City/Country"></Label>
			<Text text="{CITY} / {COUNTRY}"></Text>
			<Label text="Email Address"></Label>
			<Text text="{EMAIL_ADDRESS}"></Text>
			<Label text="Postal Code"></Label>
			<Text text="{POSTAL_CODE}"></Text>
		</f:content>
	</f:SimpleForm>
</core:FragmentDefinition>